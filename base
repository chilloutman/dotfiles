export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

alias ls='ls -h'
alias ll='ls -l'
alias l='ll'
alias la='ls -la'

alias gs='git status'
alias gitd='git daemon --reuseaddr --verbose --base-path=.git  --export-all'
alias gradlew='./gradlew'
alias gw='./gradlew'

alias vi=vim
alias g=grep

export EDITOR=vi

if [[ "$OSTYPE" == darwin* ]] ; then
    export CLICOLOR=CLICOLOR

    function vs () { VSCODE_CWD="$PWD" open -n -b "com.microsoft.VSCode" --args "$@"; }
    
    # Switch Java version
    export JAVA7_HOME="$(/usr/libexec/java_home -v 1.7 2>/dev/null)"
    export JAVA_HOME="$(/usr/libexec/java_home -v 1.8)"
fi
