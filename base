export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

alias ls='ls -h'
alias ll='ls -l'
alias l='ll'
alias la='ls -la'

alias gs='git status'
alias gitd='git daemon --reuseaddr --verbose --base-path=.git  --export-all'
alias gradlew='./gradlew'
alias gw='./gradlew'

alias vi=vim
alias g=grep
alias vs=code
alias coffee='caffeinate -s -w $$'

export EDITOR=vi

if [[ "$OSTYPE" == darwin* ]] ; then
    export CLICOLOR=CLICOLOR
fi
